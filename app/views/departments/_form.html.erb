<%= form_for [@department], :html => { :role => 'form department' } do |f| %>

  <% input_disabled ||= false  
     #if input_disabled is not passed to the partial it doesn't crash. 
     # We default it to false 
  %>

  <% if @department.errors.any? %>
    <div id="error_explanation" class="panel panel-danger">
      <div class="panel-body">
        <ul>
        <% @department.errors.full_messages.each do |msg| %>
          <li><h5><%= msg %></h5></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-12">
      <div class="row">

        <div class="form-group col-sm-2">
          <%= f.label :short, class: 'control-label' %>
          <%= f.text_field :short, autofocus: true, class: 'form-control input-sm', placeholder: t('placeholder_text.department.form.short'), disabled: input_disabled %>
        </div>

        <div class="form-group col-sm-10">
          <%= f.label :name, class: 'control-label' %>
          <%= f.text_field :name, class: 'form-control input-sm', placeholder: t('placeholder_text.department.form.name'), disabled: input_disabled %>
        </div>

      </div>  <!-- /row -->
      <hr>
    </div>  <!-- /col-sm-12 -->
  </div>  <!-- /row -->

  <div class="row">
    <div class="col-sm-6">

      <div class="row">
        <div class="form-group col-sm-2">
          <%= f.label :address_postal_code, class: 'control-label' %>
          <%= f.text_field :address_postal_code, class: 'form-control input-sm', disabled: input_disabled %>
        </div>

        <div class="form-group col-sm-8">
          <%= f.label :address_city, class: 'control-label' %>
          <%= f.text_field :address_city, class: 'form-control input-sm', disabled: input_disabled %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-sm-8">
          <%= f.label :address_street, class: 'control-label' %>
          <%= f.text_field :address_street, class: 'form-control input-sm', disabled: input_disabled %>
        </div>
        <div class="form-group col-sm-2">
          <%= f.label :address_house, class: 'control-label' %>
          <%= f.text_field :address_house, class: 'form-control input-sm', disabled: input_disabled %>
        </div>
        <div class="form-group col-sm-2">
          <%= f.label :address_number, class: 'control-label' %>
          <%= f.text_field :address_number, class: 'form-control input-sm', disabled: input_disabled %>
        </div>
      </div>

    </div> <!-- /col-sm-6 -->

    <div class="col-sm-6">

      <div class="row">
        <div class="form-group col-sm-3">
          <%= f.label :phone, class: 'control-label' %>
          <%= f.text_field :phone, class: 'form-control input-sm', disabled: input_disabled %>
        </div>
        <div class="form-group col-sm-3">
          <%= f.label :fax, class: 'control-label' %>
          <%= f.text_field :fax, class: 'form-control input-sm', disabled: input_disabled %>
        </div>
        <div class="form-group col-sm-6">
          <%= f.label :email, class: 'control-label' %>
          <%= f.text_field :email, class: 'form-control input-sm', disabled: input_disabled %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-sm-6">
          <%= f.label :director, class: 'control-label' %>
          <%= f.text_field :director, class: 'form-control input-sm', disabled: input_disabled %>
        </div>
        <div class="form-group col-sm-4">
          <%= f.label :code, class: 'control-label' %>
          <%= f.text_field :code, class: 'form-control input-sm', disabled: input_disabled %>
        </div>
      </div>

    </div> <!-- /col-sm-6 -->
  </div> <!-- /row -->

  <hr>


  <% if input_disabled %>
    <!-- for "Show" -->
  <% else %>
    <!-- form "New"/"Edit" -->
    <div class="row">
      <%= link_to t('Index', default: t("helpers.links.index")), departments_path, :class => 'btn btn-default glyphicon glyphicon-th-list' %>

      <%= link_to t('Back', default: t("helpers.links.back")), :back, :class => 'btn btn-default glyphicon glyphicon-arrow-left' %>

      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div> <!-- /row -->
  <% end %>
  
<% end %>


