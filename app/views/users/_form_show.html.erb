<%= form_for [@user], :html => { :role => 'form user' } do |f| %>

  <% input_disabled ||= false  
     #if input_disabled is not passed to the partial it doesn't crash. 
     # We default it to false 
  %>

  <% if @user.errors.any? %>
    <div id="error_explanation" class="panel panel-danger">
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><h5><%= msg %></h5></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-12">
      <div class="row">

        <div class="form-group col-sm-4">
          <%= f.label :name, class: 'control-label' %>
          <h5><%= @user.name %></h5>
        </div>

        <div class="form-group col-sm-4">
          <%= f.label :email, class: 'control-label' %>
          <h5><%= @user.email %></h5>
        </div>

        <div class="form-group col-sm-4">
          <%= f.label :department_id, class: 'control-label' %>
          <h5><%= link_to @user.department.short, department_path(@user.department)  if @user.department.present? %>
        </div>

      </div>  <!-- /row -->
      <hr>
    </div>  <!-- /col-sm-12 -->
  </div>  <!-- /row -->

  <div class="row">
    <div class="col-sm-12">

      <div class="row">
        <div class="form-group col-sm-3">
          <%= f.label :last_sign_in_at, class: 'control-label' %>
          <h5><%= @user.last_sign_in_at.strftime("%Y-%m-%d %H:%M") if @user.last_sign_in_at.present? %></h5>
        </div>
        <div class="form-group col-sm-3">
          <%= f.label :last_sign_in_ip, class: 'control-label' %>
          <h5><%= @user.last_sign_in_ip if @user.last_sign_in_ip.present? %></h5>
        </div>

        <div class="form-group col-sm-3">
          <%= f.label :current_sign_in_at, class: 'control-label' %>
          <h5><%= @user.current_sign_in_at.strftime("%Y-%m-%d %H:%M") if @user.current_sign_in_at.present? %></h5>
        </div>
        <div class="form-group col-sm-3">
          <%= f.label :current_sign_in_ip, class: 'control-label' %>
          <h5><%= @user.current_sign_in_ip if @user.current_sign_in_ip.present? %></h5>
        </div>

      </div>

    </div> <!-- /col-sm-12 -->
  </div> <!-- /row -->

  <hr>


  <%= link_to t('Index', default: t("helpers.links.index")), users_path, :class => 'btn btn-default glyphicon glyphicon-th-list' %>

  <%= link_to t('Back', default: t("helpers.links.back")), :back, :class => 'btn btn-default glyphicon glyphicon-arrow-left' %>

  <% if input_disabled %>
    <!-- for "Show" -->

    <% if policy(@user).destroy? %>
      <%= link_to t('Delete', default: t("helpers.links.destroy")), user_path(@user),
                          method: :delete,
                          data: { confirm: t('helpers.links.confirm_destroy', data: @user.name) }, 
                          :class => "btn btn-danger glyphicon glyphicon-trash" %>
    <% end %>

    <% if policy(@user).edit? %>
      <%= link_to t('Edit', default: t("helpers.links.edit")), edit_user_path(@user), 
                      :class => "btn btn-primary glyphicon glyphicon-edit" %>  
    <% end %>
  <% else %>
    <!-- form "New"/"Edit" -->
  <% end %>
  
<% end %>

