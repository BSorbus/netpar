<br>
<div class="panel-group" id="myaccordion">

  <!-- Dane -->
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-customer">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_data" >
              <span class="glyphicon glyphicon-user">&nbsp;<%=t "pages.customer.show.title"%>:&nbsp;<%= @customer.fullname %></span>
              <i class="indicator glyphicon glyphicon-chevron-down  pull-right"></i>
            </a>
          </div> 
        </div>
        <div id="collapse_data" class="panel-collapse collapse in"> <!-- id="collapse_data" -->
          <div class="panel-body">         
            <div class="col-sm-11 col-sm-offset-1">

              <%= render 'form_show', input_disabled: true %>

            </div> <!--/col-sm-11 col-sm-offset-1-->    
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_data" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-12-->
  </div> <!-- /row -->


  <!-- Certificates-->
  <div class="row">
    <div class="col-sm-11 col-sm-offset-1">
      <div class="panel panel-certificate">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_certificates" >
              <span class="glyphicon glyphicon-certificate">&nbsp;<%= t "pages.certificate.index.title" %></span>
              <i class="indicator glyphicon glyphicon-chevron-right  pull-right"></i>
            </a>
          </div>
        </div>
        <div id="collapse_certificates" class="panel-collapse collapse"> <!-- id="collapse_certificates" -->
          <div class="panel-body">
            <div class="col-sm-12">

              <% if policy(:certificate).index_l? %>
                <%= render 'certificates_l' %>
              <% end %>

              <% if policy(:certificate).index_m? %>
                <%= render 'certificates_m' %>
              <% end %>

              <% if policy(:certificate).index_r? %>
                <%= render 'certificates_r' %>
              <% end %>

            </div> <!--/class="col-sm-12" -->
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_certificates" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-11 col-sm-offset-1 -->
  </div> <!-- /row -->

  <!-- Licenses-->
  <div class="row">
    <div class="col-sm-11 col-sm-offset-1">
      <div class="panel panel-license">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_licenses" >
              <span class="glyphicon glyphicon-file">&nbsp;<%= t "pages.license.index.title" %></span>
              <i class="indicator glyphicon glyphicon-chevron-right  pull-right"></i>
            </a>
          </div>
        </div>
        <div id="collapse_licenses" class="panel-collapse collapse"> <!-- id="collapse_licenses" -->
          <div class="panel-body">
            <div class="col-sm-12">

              <% if policy(:individual).index? %>
                <%= render 'licenses_i' %>
              <% end %>

              <%# if policy(:individual).index? %>
                <%= render 'licenses_c' %>
              <%# end %>

              <%# if policy(:individual).index? %>
                <%= render 'licenses_b' %>
              <%# end %>

            </div> <!--/class="col-sm-12" -->
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_licenses" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-11 col-sm-offset-1 -->
  </div> <!-- /row -->

  <%= render partial: "documents/documents_in_panel", locals: {documentable: @customer} %>

  <!-- Wydruki -->
  <div class="row">
    <div class="col-sm-11 col-sm-offset-1">
      <div class="panel panel-print">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_scan_and_print" >
              <span class="glyphicon glyphicon-print"> Wydruki</span>
              <i class="indicator glyphicon glyphicon-chevron-right  pull-right"></i>
            </a>
          </div>
        </div>
        <div id="collapse_scan_and_print" class="panel-collapse collapse"> <!-- id="collapse_scan_and_print" -->
          <div class="panel-body">
            <div class="col-sm-12">

              <%#= render 'scan_and_print' %>

            </div> <!--/class="col-sm-12" -->
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_scan_and_print" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-11 col-sm-offset-1 -->
  </div> <!-- /row -->


</div> <!-- /class="panel-group" id="myaccordion" -->
