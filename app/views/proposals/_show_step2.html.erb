<fieldset class="my-fieldset">
  <legend class="my-fieldset"><%= t('proposals.form_step2.fieldset_title') %></legend>

  <% if partial_data.lives_in_poland %>
    <div class="row">
      <div class="form-group col-sm-12">
        <p><strong>Mieszkam w Polsce</strong></p>
        <h5><%= t(partial_data.lives_in_poland) %></h5>
      </div>
    </div> <!--/row -->
    <div class="row">
      <div class="form-group required col-sm-4">
        <p><strong><%= Proposal.human_attribute_name(:province_name) %></strong></p>
        <h5><%= partial_data.province_name %></h5>
      </div>
      <div class="form-group col-sm-4">
        <p><strong><%= Proposal.human_attribute_name(:district_name) %></strong></p>
        <h5><%= partial_data.district_name %></h5>
      </div>
      <div class="form-group col-sm-4">
        <p><strong><%= Proposal.human_attribute_name(:commune_name) %></strong></p>
        <h5><%= partial_data.commune_name %></h5>
      </div>
    </div> <!--/row -->
  <% else %>
    <div class="row">
      <div class="form-group col-sm-12">
        <p><strong>Mieszkam w Polsce</strong></p>
        <h5><%= t(partial_data.lives_in_poland) %></h5>
      </div>
    </div> <!--/row -->
  <% end %>

  <div class="row">
    <div class="form-group required col-sm-4">
      <p><strong><%= Proposal.human_attribute_name(:city_name) %></strong></p>
      <h5><%= partial_data.city_name %></h5>
    </div>
    <div class="form-group required col-sm-4">
      <p><strong><%= Proposal.human_attribute_name(:street_name) %></strong></p>
      <h5><%= partial_data.street_attribute unless partial_data.street_attribute.blank? %>&nbsp<%= partial_data.street_name %></h5>
    </div>
  </div> <!--/row -->

  <div class="row">
    <div class="form-group required col-sm-2">
      <p><strong><%= Proposal.human_attribute_name(:c_address_house) %></strong></p>
      <h5><%= partial_data.c_address_house %></h5>
    </div>

    <div class="form-group col-sm-2">
      <p><strong><%= Proposal.human_attribute_name(:c_address_number) %></strong></p>
      <h5><%= partial_data.c_address_number %></h5>
    </div>

    <div class="form-group required col-sm-2">
      <p><strong><%= Proposal.human_attribute_name(:c_address_postal_code) %></strong></p>
      <h5><%= partial_data.c_address_postal_code %></h5>
    </div>
  </div> <!--/row -->

</fieldset>

