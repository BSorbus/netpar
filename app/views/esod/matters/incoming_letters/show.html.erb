<div class="panel-group" id="myaccordion">

  <!-- Dane -->
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-esod-incoming-letter">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_data" >
              <span class="glyphicon glyphicon-retweet">&nbsp;<%=t "pages.esod_incoming_letter.show.title"%>:&nbsp;<%= @esod_incoming_letter_matter.sygnatura %></span>
