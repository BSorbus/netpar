<div class="row">
  <div class="col-sm-1">
    <%= image_tag("incoming_letter.jpg") %>
  </div> <!--/col-sm-1 -->

  <div class="col-sm-11">

    <div class="col-sm-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= Esod::IncomingLettersMatter.human_attribute_name(:sygnatura) %></th>
            <th><%= Esod::IncomingLetter.human_attribute_name(:numer_ewidencyjny) %></th>
            <th><%= Esod::IncomingLetter.human_attribute_name(:tytul) %></th>
            <th><%= Esod::IncomingLetter.human_attribute_name(:data_wplyniecia) %></th>
            <th><%= Esod::IncomingLetter.human_attribute_name(:termin_na_odpowiedz) %></th>
            <th><%= Esod::Contractor.human_attribute_name(:fullname) %></th>
            <th><%= Esod::Address.human_attribute_name(:fullname) %></th>
          </tr>
        </thead>

        <tbody>
          <% @esod_matter.esod_incoming_letters_matters.order(id: :desc).each do |letter_matter| %>
            <tr>
              <td><%= link_to( letter_matter.sygnatura, esod_matter_incoming_letter_path(letter_matter.esod_matter, letter_matter.esod_incoming_letter) ) %></td>
              <td><%= letter_matter.esod_incoming_letter.numer_ewidencyjny %></td>
              <td><%= letter_matter.esod_incoming_letter.tytul %></td>
              <td><%= letter_matter.esod_incoming_letter.data_wplyniecia %></td>
              <td><%= letter_matter.esod_incoming_letter.termin_na_odpowiedz %></td>
              <td><%= letter_matter.esod_incoming_letter.esod_contractor.fullname %></td>
              <td><%= letter_matter.esod_incoming_letter.esod_address.fullname %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div> <!--/col-sm-12 -->

    <div class="col-sm-12">
      <div class="row">
      </div> <!--/row -->
    </div> <!--/col-sm-12 -->

  </div> <!--/col-sm-11 -->
</div> <!--/row -->
