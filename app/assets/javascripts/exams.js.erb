$(document).ready(function() {
  var oExamtable = $('#exams').DataTable({
    responsive: true,
    processing: true,
    serverSide: true,
    deferRender: true,
    ajax: { 
      url: $('#exams').data('source'),
      type: "POST"
    },
    pagingType: "full_numbers",
    lengthMenu: [[10, 15, 25, 50, 100], [10, 15, 25, 50, 100]],
    columns: [
      { "targets": [0],
        "title": "ID",
        "visible": false,
        "searchable": false,
        "sortable": false }, 
      { "targets": [1],
        "title": "<%= Document.human_attribute_name('fileattach') %>",
        "visible": true,
        "searchable": false,
        "sortable": false }, 
      { "targets": [2],
        "title": "<%= Exam.human_attribute_name('number') %>" }, 
      { "targets": [3],
        "title": "<%= Exam.human_attribute_name('date_exam') %>" }, 
      { "targets": [4],
        "title": "<%= Exam.human_attribute_name('place_exam') %>" }, 
      { "targets": [5],
        "title": "<%= Exam.human_attribute_name('chairman') %>" }, 
      { "targets": [6],
        "title": "<%= Exam.human_attribute_name('secretary') %>" }, 
      { "targets": [7],
        "title": "<%= Exam.human_attribute_name('category') %>" }
    ],
    order: [[ 3, "desc" ]],
    language: {
      url: '<%= asset_path("pl.json.erb") %>'
    }
  });
 
  

});
