<% input_disabled ||= false  
   #if input_disabled is not passed to the partial it doesn't crash. 
   # We default it to false 
%>

<div class="row">
  <div class="col-sm-12">
    <div class="row">

      <div class="form-group col-sm-3">
        <p><strong><%= User.human_attribute_name(:name) %></strong></p>
        <h5><%= @user.name %></h5>
      </div>

      <div class="form-group col-sm-3">
        <p><strong><%= User.human_attribute_name(:email) %></strong></p>
        <h5><%= @user.email %></h5>
      </div>

      <div class="form-group col-sm-3">
        <p><strong><%= User.human_attribute_name(:department_id) %></strong></p>
        <h5><%= link_to @user.department.short, department_path(@user.department)  if @user.department.present? %>
      </div>

      <div class="form-group col-sm-3">
        <p><strong><%= User.human_attribute_name(:deleted_at) %></strong></p>
        <h5><%= @user.deleted_at.strftime("%Y-%m-%d %H:%M") if @user.deleted_at.present? %></h5>
      </div>

    </div>  <!-- /row -->
  </div>  <!-- /col-sm-12 -->
</div>  <!-- /row -->

<hr>

<div class="row">
  <div class="col-sm-12">

    <div class="row">
      <div class="form-group col-sm-3">
        <p><strong><%= User.human_attribute_name(:last_sign_in_at) %></strong></p>
        <h5><%= @user.last_sign_in_at.strftime("%Y-%m-%d %H:%M") if @user.last_sign_in_at.present? %></h5>
      </div>
      <div class="form-group col-sm-3">
        <p><strong><%= User.human_attribute_name(:last_sign_in_ip) %></strong></p>
        <h5><%= @user.last_sign_in_ip if @user.last_sign_in_ip.present? %></h5>
      </div>

      <div class="form-group col-sm-3">
        <p><strong><%= User.human_attribute_name(:current_sign_in_at) %></strong></p>
        <h5><%= @user.current_sign_in_at.strftime("%Y-%m-%d %H:%M") if @user.current_sign_in_at.present? %></h5>
      </div>
      <div class="form-group col-sm-3">
        <p><strong><%= User.human_attribute_name(:current_sign_in_ip) %></strong></p>
        <h5><%= @user.current_sign_in_ip if @user.current_sign_in_ip.present? %></h5>
      </div>

    </div>

  </div> <!-- /col-sm-12 -->
</div> <!-- /row -->

<hr>


<% if input_disabled %>
  <!-- for "Show" -->
  <div class="row">
    <%= link_to t('Index', default: t("helpers.links.index")), users_path, :class => 'btn btn-default glyphicon glyphicon-th-list' %>

    <%= link_to t('Back', default: t("helpers.links.back")), :back, :class => 'btn btn-default glyphicon glyphicon-arrow-left' %>


    <% if policy(@user).destroy? %>
      <%= link_to t('Delete', default: t("helpers.links.destroy")), user_path(@user),
                          method: :delete,
                          data: { confirm: t('helpers.links.confirm_destroy', data: @user.name) }, 
                          :class => "btn btn-danger glyphicon glyphicon-trash" %>
    <% end %>

    <% if policy(@user).edit? %>
      <%= link_to t('Edit', default: t("helpers.links.edit")), edit_user_path(@user), 
                      :class => "btn btn-primary glyphicon glyphicon-edit" %>  

      <% if @user.deleted_at.present? %>
        <%= link_to t('Unlock user', default: t("helpers.links.unlocking_user")), unlock_user_path(@user),
                            method: :patch,
                            data: { confirm: t('helpers.links.confirm_unlocking_user', data: @user.fullname_and_id) }, 
                            :class => "btn btn-warning glyphicon glyphicon-unlock" %>
      <% else %>
        <%= link_to t('Lock user', default: t("helpers.links.locking_user")), lock_user_path(@user),
                            method: :patch,
                            data: { confirm: t('helpers.links.confirm_locking_user', data: @user.fullname_and_id) }, 
                            :class => "btn btn-warning glyphicon glyphicon-lock" %>
      <% end %>

    <% end %>




  </div> <!-- /row -->
<% else %>
  <!-- form "New"/"Edit" -->
<% end %>

