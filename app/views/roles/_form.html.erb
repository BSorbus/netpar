<%= form_for [@role], :html => { :role => 'form role' } do |f| %>

  <% input_disabled ||= false  
     #if input_disabled is not passed to the partial it doesn't crash. 
     # We default it to false 
  %>

  <%= form_errors_for @role %>

  <div class="row">
    <div class="col-sm-12">
      <div class="row">

        <div class="form-group col-sm-10">
          <%= f.label :name, class: 'control-label' %>
          <%= f.text_field :name, autofocus: true, class: 'form-control input-sm', placeholder: t('placeholder_text.role.form.name'), disabled: input_disabled %>
        </div>

      </div>  <!-- /row -->
    </div>  <!-- /col-sm-12 -->
  </div>  <!-- /row -->

  <hr class="hr-without-top-margin">

  <div class="row">
    <div class="col-sm-12">
      <div class="row">

        <div class="form-group col-sm-12">
          <%= f.label :activities, class: 'control-label' %>
          <%= f.text_field :activities, class: 'form-control input-sm', placeholder: t('placeholder_text.role.form.activities'), disabled: input_disabled %>
          <small class="help-block"><%=t 'help_block_text.role.form.activities' %></small>
        </div>

      </div>
    </div> <!-- /col-sm-6 -->
  </div> <!-- /row -->

  <hr class="hr-without-top-margin">


  <% if input_disabled %>
    <!-- for "Show" -->
  <% else %>
    <!-- form "New"/"Edit" -->
    <div class="row">
      <%= link_to roles_path(), class: "btn btn-default" do %>
        <span class="fa fa-list"></span>
        <%= t("helpers.links.index") %>
      <% end %>

      <%= link_to :back, class: "btn btn-default" do %>
        <span class="fa fa-undo"></span>
        <%= t("helpers.links.back") %>
      <% end %>


      <%= f.submit nil, :class => 'btn btn-success' %>
    </div> <!-- /row -->
  <% end %>
  
<% end %>



