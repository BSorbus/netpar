<div class="col-sm-12">
  <div class="row">
    <h3 class="center">
      <span class='<%= t("pages.role.model_icon") %> glyp-index-title' aria-hidden="true"></span>
      <span class="index-title"><%= t "pages.role.index.title" %></span>
    </h3>
  </div> <!--/row -->
</div> <!--/col-sm-12 -->

<div class="container">
  <div class="col-sm-12">
    <div class="row">
      <div class="column">
        <table class="table table-hover">
          <tbody>
            <% @roles.each do |role| %>
              <tr>
                <%= render role %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div> <!--/column -->
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->
  <div class="col-sm-12">
    <div class="row">
      <% if policy(:role).new? %>
        <%= link_to t('New', default: t("helpers.links.new")), new_role_path, 
                            :class => 'btn btn-primary glyphicon glyphicon-plus pull-right' %> 
      <% end %>
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->
</div> <!--/coontainer -->
