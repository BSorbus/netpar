<div class="container">
  <div class="col-sm-12">
    <div class="row">
      <h3><span class="glyphicon glyphicon-flag" aria-hidden="true"> 
        <%= t "pages.department.index.title" %>  
        </span>
      </h3>
      <div class="column">
        <table class="table table-hover">
          <tbody>
            <% @departments.each do |department| %>
              <tr>
                <%= render department %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->

  <div class="col-sm-12">
    <div class="row">
      <% if policy(:department).new? %>
        <%= link_to t('New', default: t("helpers.links.new")), new_department_path, 
                            :class => 'btn btn-primary glyphicon glyphicon-plus pull-right' %> 
      <% end %>
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->
</div> <!--/coontainer -->
