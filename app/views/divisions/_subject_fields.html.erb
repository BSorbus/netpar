<div class="fields">
  <div class='row' >
    <div class="form-group col-sm-1">
      <%= f.text_field :id, disabled: true, class: 'form-control input-sm' %>
    </div>
    <div class="form-group col-sm-1">
      <%= f.text_field :item, class: 'form-control input-sm' %>
    </div>
    <div class="form-group col-sm-4">
      <%= f.text_field :name, class: 'form-control input-sm' %>
    </div>
    <div class="form-group col-sm-1">
      <%= f.text_field :esod_categories, disabled: true, class: 'form-control input-sm' %>
    </div>
    <div class="form-group col-sm-3">
      <%= f.text_field :test_template, class: 'form-control input-sm' %>
    </div>
    <div class="form-group col-sm-2">
      <%= f.hidden_field :_destroy %>
      <%= link_to t("helpers.links.link_to_remove_fields_nested"), '#',
        onClick: "removeNestedFields(this); return false;", class: 'remove-link-button btn btn-sm btn-danger' %>
    </div>

  </div>
</div>

