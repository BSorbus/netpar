<fieldset class="my-fieldset">
  <legend class="my-fieldset"><%= t('proposals.form_step3.fieldset_title') %></legend>

  <div class="row">
    <div class="form-group col-sm-8">
      <p><strong><%= Proposal.human_attribute_name(:category_name) %></strong></p>
      <%= category_name(partial_data) %>
    </div>
  </div> <!--/row -->
  <div class="row">
    <div class="form-group col-sm-8">
      <p><strong><%= Proposal.human_attribute_name(:division_fullname) %></strong></p>
      <%= partial_data.try(:division_fullname) %>
    </div>
    <div class="form-group col-sm-4">
      <p><strong><%= Proposal.human_attribute_name(:exam_fee_price) %></strong></p>
      <%= number_with_precision(partial_data.exam_fee_price, precision: 2, delimiter: ' ', separator: ',') %><span> PLN</span>
    </div>
  </div> <!--/row -->
  <div class="row">
    <div class="form-group col-sm-8">
      <p><strong><%= Proposal.human_attribute_name(:exam_fullname) %></strong></p>
      <%= partial_data.try(:exam_fullname) %>
    </div>
    <div class="form-group col-sm-4">
      <p><strong><%= Proposal.human_attribute_name(:exam_date_exam) %></strong></p>
      <%= partial_data.try(:exam_date_exam).strftime("%Y-%m-%d") %>
    </div>
  </div> <!--/row -->

</fieldset>

