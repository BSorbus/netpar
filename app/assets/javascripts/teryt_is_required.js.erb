function terytIsRequired(status_checkbox) {
  if (status_checkbox) {
    //set value
    setValuesAndReadOnlyForInPoland();
    //show and hide fields
    showHideFieldsForInPoland();
  } else {
    //set values
    setValuesAndReadOnlyForNotInPoland();
    //show and hide fields
    showHideFieldsForNotInPoland();
  };
};
