      { "targets": [12],
        "title": "<%= Esod::Matter.human_attribute_name('initialized_from_esod') %>" }
    ],
    order: [[ 1, "asc" ]],
    language: {
      url: '<%= asset_path("pl.json.erb") %>'
    }
  });
 

});
