        </div>
        <div id="collapse_data" class="panel-collapse collapse in"> <!-- id="collapse_data" -->
          <div class="panel-body">
            <div class="col-sm-1">
              <%= image_tag("esod.jpg") %>
            </div> <!--/col-sm-1 -->

            <div class="col-sm-11">

              <%= render 'form_show', category_service: category_service, resource_service: resource_service, action_service: action_service, customer_id: customer_id, exam_id: exam_id, certificate_id: certificate_id, input_disabled: true %>

            </div> <!--/col-sm-11 col-sm-offset-1-->    
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_data" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-12-->
