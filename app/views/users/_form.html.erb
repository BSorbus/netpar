<%= form_for [@user], :html => { :role => 'form user' } do |f| %>

  <% input_disabled ||= false  
     #if input_disabled is not passed to the partial it doesn't crash. 
     # We default it to false 
  %>

  <%= form_errors_for @user %>

  <div class="row">
    <div class="col-sm-12">

      <div class="row">
        <div class="form-group col-sm-3">
          <%= f.label :first_name, class: 'control-label' %>
          <%= f.text_field :first_name, autofocus: true, class: 'form-control input-sm', placeholder: t('placeholder_text.user.form.name'), disabled: true %>
        </div>
        <div class="form-group col-sm-3">
          <%= f.label :last_name, class: 'control-label' %>
          <%= f.text_field :last_name, autofocus: true, class: 'form-control input-sm', placeholder: t('placeholder_text.user.form.name'), disabled: true %>
        </div>
        <div class="form-group col-sm-3">
          <%= f.label :name, class: 'control-label' %>
          <%= f.text_field :name, autofocus: true, class: 'form-control input-sm', placeholder: t('placeholder_text.user.form.name'), disabled: true %>
        </div>
        <div class="form-group col-sm-3">
          <%= f.label :email, class: 'control-label' %>
          <%= f.text_field :email, class: 'form-control input-sm', placeholder: t('placeholder_text.user.form.email'), disabled: true %>
        </div>
      </div>  <!-- /row -->
      <div class="row">
        <div class="control-group col-sm-3">
          <%= f.label :department_id, class: "control-label" %>
          <%= f.select :department_id, 
                Department.by_short.collect {|p| [ "#{p.short}, #{p.address_city}", p.id ]},
                { include_blank: true, multiple: false }, 
                { class: 'form-control input-sm', autofocus: true, disabled: input_disabled } %>
        </div>
        <div class="form-group col-sm-3">
          <%= f.label :wso2_name, class: 'control-label' %>
          <%= f.text_field :wso2_name, class: 'form-control input-sm' %>
        </div>
        <div class="form-group col-sm-3">
          <%= f.label :esod_password, class: 'control-label' %>
          <%= f.password_field :esod_password, :autocomplete => 'off', class: 'form-control input-sm' %>
        </div>
      </div>  <!-- /row -->


    </div>  <!-- /col-sm-12 -->
  </div>  <!-- /row -->

  <hr class="hr-without-top-margin">


  <% if input_disabled %>
    <!-- for "Show" -->
  <% else %>
    <!-- form "New"/"Edit" -->
    <div class="row">
      <%= link_to users_path(), class: "btn btn-default" do %>
        <span class="fa fa-list"></span>
        <%= t("helpers.links.index") %>
      <% end %>

      <%= link_to :back, class: "btn btn-default" do %>
        <span class="fa fa-undo"></span>
        <%= t("helpers.links.back") %>
      <% end %>

      <%= f.submit nil, :class => 'btn btn-success' %>
    </div> <!-- /row -->
  <% end %>
  
<% end %>


