                          disabled: ! @proposal.can_or_not_approved? do %>
        <span class="fa fa-check"></span>
        <%= t("helpers.links.proposal_approved") %>
      <% end %>

      <%= link_to edit_not_approved_proposal_path(@proposal.category.downcase, @proposal), 
                          class: "btn btn-danger",
                          disabled: ! @proposal.can_or_not_approved? do %>
        <span class="fa fa-ban"></span>
