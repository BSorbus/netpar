<% input_disabled ||= false  
   #if input_disabled is not passed to the partial it doesn't crash. 
   # We default it to false 
%>

<%= form_errors_for @proposal %>

<%= render partial: "show_step1", locals: {partial_data: @proposal} %>
<%= render partial: "show_step2", locals: {partial_data: @proposal} %>
<%= render partial: "show_step3", locals: {partial_data: @proposal} %>
<%= render partial: "show_step4", locals: {partial_data: @proposal} %>
<%= render partial: "show_step5", locals: {partial_data: @proposal} %>

<hr class="hr-without-top-margin">

<div class="row">
  <div class="col-sm-12">
    <p><strong><%= @proposal.class.human_attribute_name(:status_name) %>:</strong>&nbsp;<%= proposal_rec_status_name(@proposal) %></p>
  </div> <!-- /col-sm-6 -->
</div> <!-- /row -->

<%= render partial: "show_not_approved_comment", locals: {partial_data: @proposal} if @proposal.proposal_status_id == Proposal::PROPOSAL_STATUS_NOT_APPROVED %>

<hr class="hr-without-top-margin">

<div class="row">
  <div class="col-sm-12">

    <%= link_to proposals_path(params[:category_service]), class: "btn btn-default" do %>
      <span class="fa fa-list"></span>
      <%= t("helpers.links.index") %>
    <% end %>

		<% if proposal_policy_check(@proposal, params[:category_service], 'edit') %>
