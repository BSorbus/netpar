<br>
<div class="panel-group" id="myaccordion">

  <!-- Dane -->
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-esod-matter">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_data" >
              <span class="glyphicon glyphicon-retweet">&nbsp;<%=t "pages.esod_matter.show.title"%>:&nbsp;<%= @esod_matter.fullname %></span>
              <i class="indicator glyphicon glyphicon-chevron-down  pull-right"></i>
            </a>
          </div> 
        </div>
        <div id="collapse_data" class="panel-collapse collapse in"> <!-- id="collapse_data" -->
          <div class="panel-body">
            <div class="col-sm-1">
              <%= image_tag("esod.jpg") %>
            </div> <!--/col-sm-1 -->

            <div class="col-sm-11">

              <%= render 'form_show', category_service: category_service, resource_service: resource_service, input_disabled: true %>

            </div> <!--/col-sm-11 col-sm-offset-1-->    
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_data" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-12-->
  </div> <!-- /row -->


  <!-- Pisma przychodzące-->
  <div class="row">
    <div class="col-sm-11 col-sm-offset-1">
      <div class="panel panel-esod-incoming-letter">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_incoming_letters" >
              <span class="glyphicon glyphicon-envelope">&nbsp;<%= t "pages.esod_incoming_letter.index_for_matter.title" %></span>
              <i class="indicator glyphicon glyphicon-chevron-right  pull-right"></i>
            </a>
          </div>
        </div>
        <div id="collapse_incoming_letters" class="panel-collapse collapse"> <!-- id="collapse_incoming_letters" -->
          <div class="panel-body">
            <div class="col-sm-12">


              <%= render 'incoming_letters' %>

            </div> <!--/class="col-sm-12" -->
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_incoming_letters" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-11 col-sm-offset-1 -->
  </div> <!-- /row -->

  <!-- Pisma wychodzące-->
  <div class="row">
    <div class="col-sm-11 col-sm-offset-1">
      <div class="panel panel-esod-outgoing-letter">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_outgoing_letters" >
              <span class="glyphicon glyphicon-envelope">&nbsp;<%= t "pages.esod_outgoing_letter.index_for_matter.title" %></span>
              <i class="indicator glyphicon glyphicon-chevron-right  pull-right"></i>
            </a>
          </div>
        </div>
        <div id="collapse_outgoing_letters" class="panel-collapse collapse"> <!-- id="collapse_outgoing_letters" -->
          <div class="panel-body">
            <div class="col-sm-12">

              <%= render 'outgoing_letters' %>

            </div> <!--/class="col-sm-12" -->
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_outgoing_letters" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-11 col-sm-offset-1 -->
  </div> <!-- /row -->



  <!-- Pisma wewnętrzne-->
  <div class="row">
    <div class="col-sm-11 col-sm-offset-1">
      <div class="panel panel-esod-internal-letter">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_internal_letters" >
              <span class="glyphicon glyphicon-envelope">&nbsp;<%= t "pages.esod_internal_letter.index_for_matter.title" %></span>
              <i class="indicator glyphicon glyphicon-chevron-right  pull-right"></i>
            </a>
          </div>
        </div>
        <div id="collapse_internal_letters" class="panel-collapse collapse"> <!-- id="collapse_internal_letters" -->
          <div class="panel-body">
            <div class="col-sm-12">

              <%= render 'internal_letters' %>

            </div> <!--/class="col-sm-12" -->
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_internal_letters" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-11 col-sm-offset-1 -->
  </div> <!-- /row -->


</div> <!-- /class="panel-group" id="myaccordion" -->
