$(document).ready(function() {
  var oIndividualTable = $('#individuals').DataTable({
    responsive: true,
    processing: true,
    serverSide: true,
    deferRender: true,
    ajax: { 
      url: $('#individuals').data('source'),
      type: "POST",
      error: function (jqXHR, exception) {
        console.log(jqXHR);
        if (jqXHR.status == 401) {
          window.location.reload();
        } else {
          getErrorMessage(jqXHR, exception);
        }
      }
    },
    pagingType: "full_numbers",
    lengthMenu: [[10, 15, 25, 50, 100], [10, 15, 25, 50, 100]],
    columns: [
      { "targets": [0],
        "title": "ID",
        "visible": false,
        "searchable": false,
        "sortable": false }, 
      { "targets": [1],
        "title": "<%= Document.human_attribute_name('fileattach') %>",
        "visible": true,
        "searchable": false,
        "sortable": false }, 
      { "targets": [2],
        "title": "<%= Individual.human_attribute_name('number') %>" }, 
      { "targets": [3],
        "title": "<%= Individual.human_attribute_name('date_of_issue') %>" }, 
      { "targets": [4],
        "title": "<%= Individual.human_attribute_name('valid_thru') %>" }, 
      { "targets": [5],
        "title": "<%= Individual.human_attribute_name('license_status') %>" }, 
      { "targets": [6],
        "title": "<%= Individual.human_attribute_name('call_sign') %>" }, 
      { "targets": [7],
        "title": "<%= Individual.human_attribute_name('category') %>" }, 
      { "targets": [8],
        "title": "<%= Individual.human_attribute_name('transmitter_power') %>" }, 
      { "targets": [9],
        "title": "<%= Individual.human_attribute_name('certificate_id') %>" },
      { "targets": [10],
        "title": "<%= Individual.human_attribute_name('customer_id') %>" }
    ],
    order: [[ 3, "desc" ]],
    language: {
      url: '<%= asset_path("pl.json.erb") %>'
    }
  });
 

  
});
