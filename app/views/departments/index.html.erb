<div class="col-sm-12">
  <div class="row">
    <h3 class="center">
      <span class='<%= t("pages.department.model_icon") %> glyp-index-title' aria-hidden="true"></span>
      <span class="index-title"><%= t "pages.department.index.title" %></span>
    </h3>
  </div> <!--/row -->
</div> <!--/col-sm-12 -->

<div class="container">
  <div class="col-sm-12">
    <div class="row">
      <div class="column">
        <table class="table table-hover">
          <tbody>
            <% @departments.each do |department| %>
              <tr>
                <%= render department %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div> <!--/column -->
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->

  <div class="col-sm-12">
    <div class="row">
      <% if policy(:department).new? %>

        <%= link_to new_department_path, class: "btn btn-primary" do %>
          <span class="glyphicon glyphicon-plus"></span>
          <%= t("helpers.links.new") %>
        <% end %>

      <% end %>
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->
</div> <!--/coontainer -->
