<div class="col-sm-12">
  <div class="row">

    <% if exam_policy_check(:exam, params[:category_service], 'new') %>

      <%= link_to new_exam_path(params[:category_service], back_url: exams_path(params[:category_service])), class: "btn btn-primary" do %>
        <span class="glyphicon glyphicon-plus"></span>
        <%= t("helpers.links.new") %>
      <% end %>

    <% end %>

  </div> <!--/row -->
