<br>
<div class="panel-group" id="myaccordion">

  <!-- Dane -->
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-user">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_data" >
              <span class="glyphicon glyphicon-heart">&nbsp;<%=t "pages.user.show.title"%>:&nbsp;<%= @user.name %></span>
              <i class="indicator glyphicon glyphicon-chevron-down  pull-right"></i>
            </a>
          </div> 
        </div>
        <div id="collapse_data" class="panel-collapse collapse in"> <!-- id="collapse_data" -->
          <div class="panel-body">         
            <div class="col-sm-11 col-sm-offset-1">

              <%= render 'form_show', input_disabled: true %>

            </div> <!--/col-sm-11 col-sm-offset-1-->    
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_data" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-12-->
  </div> <!-- /row -->

  <%= render partial: "documents/documents_in_panel", locals: {documentable: @user} %>

  <!-- Wydruki -->
  <div class="row">
    <div class="col-sm-10 col-sm-offset-2">
      <div class="panel panel-print">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_scan_and_print" >
              <span class="glyphicon glyphicon-print"> Wydruki</span>
              <i class="indicator glyphicon glyphicon-chevron-right pull-right"></i>
            </a>
          </div>
        </div>
        <div id="collapse_scan_and_print" class="panel-collapse collapse"> <!-- id="collapse_scan_and_print" -->
          <div class="panel-body">
            <div class="col-sm-12">

              <%= render 'scan_and_print' %>

            </div> <!--/class="col-sm-12" -->
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_scan_and_print" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-11 col-sm-offset-1 -->
  </div> <!-- /row -->

  <% if policy(:user).work? %>
    <%#= render partial: "works" %>
    <%= render partial: "works/works_in_panel", locals: {trackable_type: 'User', trackable_id: @user.id} %>
  <% end %>

  <%= render partial: "works_inspect" %>

  <!-- Role-->
  <div class="row">
    <div class="col-sm-11 col-sm-offset-1">
      <div class="panel panel-role">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_roles" >
              <span class="glyphicon glyphicon-sunglasses">&nbsp;<%= t "pages.role.index.title" %></span>
              <i class="indicator glyphicon glyphicon-chevron-right pull-right"></i>
            </a>
          </div>
        </div>
        <div id="collapse_roles" class="panel-collapse collapse"> <!-- id="collapse_roles" -->
          <div class="panel-body">
            <div class="col-sm-12">

              <% if policy(:role).index? %>
                <%= render 'roles' %>
              <% else %>
                <p><%= t "pundit.role_policy.index?" %></p>
              <% end %>

            </div> <!--/class="col-sm-12" -->
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_roles" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-11 col-sm-offset-1 -->
  </div> <!-- /row -->


</div> <!-- /class="panel-group" id="myaccordion" -->
