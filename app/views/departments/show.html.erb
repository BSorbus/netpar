<br>
<div class="panel-group" id="myaccordion">

  <!-- Dane -->
  <div class="row">
    <div class="col-sm-12">

      <div class="panel panel-department">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_data">
          <div class="panel-heading">
            <div class="panel-title">
              <span class='<%= t("pages.department.model_icon") %>'>&nbsp;</span>
              <span><%=t "pages.department.show.title"%>:&nbsp;<%= @department.short %></span>
              <i class="indicator glyphicon glyphicon-chevron-down  pull-right"></i>
            </div> 
          </div>
        </a>
        <div id="collapse_data" class="panel-collapse collapse in"> <!-- id="collapse_data" -->
          <div class="panel-body">         
            <div class="col-sm-11 col-sm-offset-1">

              <%= render 'form_show', input_disabled: true %>

            </div> <!--/col-sm-11 col-sm-offset-1-->    
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_data" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-12-->
  </div> <!-- /row -->


  <!-- Wydruki -->
  <div class="row">
    <div class="col-sm-10 col-sm-offset-2">
      <div class="panel panel-print">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_scan_and_print">
          <div class="panel-heading">
            <div class="panel-title">
              <span class='<%= t("pages.scan_and_print.model_icon") %>'>&nbsp;</span>
              <span><%=t "pages.scan_and_print.show.title"%></span>
              <i class="indicator glyphicon glyphicon-chevron-right pull-right"></i>
            </div> 
          </div>
        </a>
        <div id="collapse_scan_and_print" class="panel-collapse collapse"> <!-- id="collapse_scan_and_print" -->
          <div class="panel-body">
            <div class="col-sm-12">

              <%#= render 'scan_and_print' %>

            </div> <!--/class="col-sm-12" -->
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_scan_and_print" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-11 col-sm-offset-1 -->
  </div> <!-- /row -->



  <% if policy(:department).work? %>
    <%#= render partial: "works" %>
    <%= render partial: "works/works_in_panel", locals: {trackable_type: 'Department', trackable_id: @department.id} %>
  <% end %>


  <!-- UÅ¼ytkownicy-->
  <div class="row">
    <div class="col-sm-11 col-sm-offset-1">

      <div class="panel panel-user">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_users">
          <div class="panel-heading">
            <div class="panel-title">
              <span class='<%= t("pages.user.model_icon") %>'>&nbsp;</span>
              <span><%= t "pages.user.index.title" %></span>
              <i class="indicator glyphicon glyphicon-chevron-right pull-right"></i>
            </div> 
          </div>
        </a>
        <div id="collapse_users" class="panel-collapse collapse"> <!-- id="collapse_users" -->
          <div class="panel-body">
            <div class="col-sm-12">

              <% if policy(:user).index? %>
                <%= render 'users' %>
              <% else %>
                <p><%= t "pundit.user_policy.index?" %></p>
              <% end %>

            </div> <!--/class="col-sm-12" -->
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_users" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-11 col-sm-offset-1 -->
  </div> <!-- /row -->


</div> <!-- /class="panel-group" id="myaccordion" -->
