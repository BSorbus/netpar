<div class="row">
  <div class="col-sm-1">
    <%= image_tag("internal_letter.jpg") %>
  </div> <!--/col-sm-1 -->

  <div class="col-sm-11">

    <div class="col-sm-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= Esod::InternalLetter.human_attribute_name(:nrid) %></th>
            <th><%= Esod::InternalLetter.human_attribute_name(:numer_ewidencyjny) %></th>
            <th><%= Esod::InternalLetter.human_attribute_name(:tytul) %></th>
            <th><%= Esod::InternalLetter.human_attribute_name(:uwagi) %></th>
            <th><%= Esod::InternalLetter.human_attribute_name(:identyfikator_rodzaju_dokumentu_wewnetrznego) %></th>
            <th><%= Esod::InternalLettersMatter.human_attribute_name(:sygnatura) %></th>
          </tr>
        </thead>

        <tbody>
          <% @esod_matter.esod_internal_letters_matters.order(id: :desc).each do |letter_matter| %>
              <tr>
                <td><%= letter_matter.esod_internal_letters.nrid %></td>
                <td><%= letter_matter.esod_internal_letters.numer_ewidencyjny %></td>
                <td><%= letter_matter.esod_internal_letters.tytul %></td>
                <td><%= letter_matter.esod_internal_letters.uwagi %></td>
                <td><%= letter_matter.esod_internal_letters.identyfikator_rodzaju_dokumentu_wewnetrznego %></td>
                <td><%= letter_matter.sygnatura %></td>
              </tr>
          <% end %>

        </tbody>
      </table>
    </div> <!--/col-sm-12 -->

    <div class="col-sm-12">
      <div class="row">
      </div> <!--/row -->
    </div> <!--/col-sm-12 -->

  </div> <!--/col-sm-11 -->
</div> <!--/row -->
