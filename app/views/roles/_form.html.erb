<%= form_for [@role], :html => { :role => 'form role' } do |f| %>

  <% input_disabled ||= false  
     #if input_disabled is not passed to the partial it doesn't crash. 
     # We default it to false 
  %>

  <% if @role.errors.any? %>
    <div id="error_explanation" class="panel panel-danger">
      <div class="panel-body">
        <ul>
        <% @role.errors.full_messages.each do |msg| %>
          <li><h5><%= msg %></h5></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-12">
      <div class="row">

        <div class="form-group col-sm-10">
          <%= f.label :name, class: 'control-label' %>
          <%= f.text_field :name, autofocus: true, class: 'form-control input-sm', placeholder: t('placeholder_text.role.form.name'), disabled: input_disabled %>
        </div>

      </div>  <!-- /row -->
    </div>  <!-- /col-sm-12 -->
  </div>  <!-- /row -->

  <hr class="hr-without-top-margin">

  <div class="row">
    <div class="col-sm-12">
      <div class="row">

        <div class="form-group col-sm-12">
          <%= f.label :activities, class: 'control-label' %>
          <%= f.text_field :activities, class: 'form-control input-sm', placeholder: t('placeholder_text.role.form.activities'), disabled: input_disabled %>
          <small class="help-block"><%=t 'help_block_text.role.form.activities' %></small>
        </div>

      </div>
    </div> <!-- /col-sm-6 -->
  </div> <!-- /row -->

  <hr class="hr-without-top-margin">


  <% if input_disabled %>
    <!-- for "Show" -->
  <% else %>
    <!-- form "New"/"Edit" -->
    <div class="row">
      <%= link_to t('Index', default: t("helpers.links.index")), roles_path, :class => 'btn btn-default glyphicon glyphicon-th-list' %>

      <%= link_to t('Back', default: t("helpers.links.back")), :back, :class => 'btn btn-default glyphicon glyphicon-arrow-left' %>

      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div> <!-- /row -->
  <% end %>
  
<% end %>



