<!-- Esod Sprawy -->
<%= form_errors_for @esod_matter %>

<div class="row">
  <div class="col-sm-11 col-sm-offset-1">
    <div class="panel panel-esod-matter">
      <div class="panel-heading">
        <div class="panel-title">
          <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_esod-matter" >
            <span class="glyphicon glyphicon-retweet">&nbsp;ESOD - PowiÄ…zane Sprawy</span>
            <i class="indicator glyphicon glyphicon-chevron-right  pull-right"></i>
          </a>
        </div>
      </div>
      <div id="collapse_esod-matter" class="panel-collapse collapse"> <!-- id="collapse_esod-matter" -->
        <div class="panel-body">

          <div class="col-sm-12"> <!-- lista spraw -->
            <% if policy(:esod).index? || policy(:esod).show? %>
              <%= render partial: "esod/matters/matters_in_panel_index", locals: {matterable: matterable} %>
            <% end %>
          </div> <!-- /col-sm-12 -->

          <div class="col-sm-12">
            <hr class="hr-without-top-margin">
          </div>

          <div class="col-sm-12">
            <div class="row">
              <div class="col-sm-12">
                <% if policy(:esod).link? %> 
                  <button class="btn btn-success glyphicon glyphicon-link" type="button" data-toggle="collapse" data-target=".esod-matter-link" aria-expanded="false" ><%= t("helpers.links.link_esod_matter") %>
                  </button>
                <% end %>
                  
                <% if policy(:esod).new? %> 
                  <button class="btn btn-success glyphicon glyphicon-plus" type="button" data-toggle="collapse" data-target=".esod-matter-new" aria-expanded="false" ><%= t("helpers.links.new_esod_matter") %>
                  </button>

                  <% if matterable.esod_matters.where(czy_otwarta: true).any? %>
                  <button class="btn btn-info glyphicon glyphicon-envelope" type="button" data-toggle="collapse" data-target=".esod-matter-letter" aria-expanded="false" ><%= t("helpers.links.new_esod_matter_letter") %>
                  </button>
                  <% end %>                  
                <% end %>
                
              </div> <!-- /col-sm-12 -->
            </div> <!-- /row -->
          </div> <!-- /col-sm-12 -->


          <div class="esod-matter-link collapse"> <!-- przypisywanie istniejacych spraw -->
            <div class="col-sm-12">
              <hr>
            </div>
            <div class="col-sm-12">
              <%= render partial: "esod/matters/matters_in_panel_matter_link", locals: {matterable: matterable} %>
            </div>
          </div> <!-- /esod-matter-link collapse -->


          <div class="esod-matter-new collapse"> <!-- nowe sprawy -->
            <div class="col-sm-12">
              <hr>
            </div>
            <div class="col-sm-12">
              <%= render partial: "esod/matters/matters_in_panel_matter_new", locals: {matterable: matterable, esod_matter: @esod_matter} %>
            </div>
          </div> <!-- /row esod-matter-new collapse -->


          <div class="esod-matter-letter collapse"> <!-- tworzenie nowych pism -->
            <div class="col-sm-12">
              <hr>
            </div>
            <div class="col-sm-12">
              <%= render partial: "esod/matters/matters_in_panel_matter_letters", 
                    locals: { matterable: matterable, esod_incoming_letter: @esod_incoming_letter, 
                              esod_outgoing_letter: @esod_outgoing_letter, esod_internal_letter: @esod_internal_letter } %>
            </div>
          </div> <!-- /esod-matter-link collapse -->


        </div> <!-- /panel-body -->
      </div> <!-- /id="collapse_scan_and_print" -->
    </div> <!-- /panel -->
  </div> <!-- /col-sm-11 col-sm-offset-1 -->
</div> <!-- /row -->
